<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accesorios disponibles:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAccesorio01"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/moto2"
            android:contentDescription="Accesorio 1" />

        <ImageView
            android:id="@+id/imgAccesorio02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/moto3"
            android:contentDescription="Accesorio 2" />

        <ImageView
            android:id="@+id/imgAccesorio03"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/moto4"
            android:contentDescription="Accesorio 3" />

        <ImageView
            android:id="@+id/imgAccesorio04"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/moto5"
            android:contentDescription="Accesorio 4" />
    </LinearLayout>
</ScrollView>
